# Database
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASS=your_database_password
DB_HOST=localhost

# Server
PORT=5000
NODE_ENV=development

# Security
JWT_SECRET=your_jwt_secret_here

# Outbound email (SMTP)
# Set these to enable verification + notification emails via your provider (e.g. Whogohost mailbox)
EMAIL_HOST=mail.example.com
EMAIL_PORT=465
EMAIL_SECURE=true
EMAIL_USER=support@example.com
EMAIL_PASS=your_email_password
EMAIL_FROM="WYZE Support" <support@example.com>
EMAIL_BRAND_NAME="WYZE Support"
# Optional: hosted image displayed in email headers (PNG/JPG/SVG)
EMAIL_BRAND_LOGO_URL=https://wyzegroup.ng/assets/logo.png
